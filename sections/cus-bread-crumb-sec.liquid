{% schema %}
{
  "name": "Cus Breadcrumb",
  "tag": "section",
  "class": "breadcrumb-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_breadcrumb",
      "label": "Show breadcrumb",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Cus Breadcrumb"
    }
  ]
}
{% endschema %}

<div class="page-width cus-bread-crumb-wrp">
{% if section.settings.show_breadcrumb %}
  <nav class="breadcrumb" aria-label="breadcrumbs">
    <div class="breadcrumb_colmun">
   
      <a href="{{ routes.root_url }}" title="{{ 'wbcustomlabel.wballtext.home' | t }}">
        {{- 'wbcustomlabel.wballtext.home' | t -}}
      </a>
      {% if template contains 'collection' and collection.handle %}
        <span aria-hidden="true">{% render 'icon-arrow-right' %}</span>
        {% if current_tags %}
          {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
          {{ collection.title | link_to: url }}
          <span aria-hidden="true">{% render 'icon-arrow-right' %}</span>
          <span>{{ current_tags | join: ' + ' }}</span>
        {% else %}
          <span>{{ collection.title }}</span>
        {% endif %}
      {% endif %}
    </div>
    <h2 class="cus-brd-title"><strong>{{collection.title }}</strong></h2>
  </nav>
{% endif %}
</div>


<style>
.cus-bread-crumb-wrp ,.cus-brd-title{
 margin-top:10px;
}

</style>