<div class="custom-menu-section page-width">
  <h2 class="menu-heading">{{ section.settings.heading }}</h2>
  <div class="menu-description">{{ section.settings.description }}</div>

  <div class="menu-table">
    <div class="menu-column">
      {%- for link in section.settings.menu_1.links -%}
        <div class="menu-row">
          {{ link.title | link_to: link.url }}
        </div>
      {%- endfor -%}
    </div>

    <div class="menu-column">
      {%- for link in section.settings.menu_2.links -%}
        <div class="menu-row">
          {{ link.title | link_to: link.url }}
        </div>
      {%- endfor -%}
    </div>

    <div class="menu-column">
      {%- for link in section.settings.menu_3.links -%}
        <div class="menu-row">
          {{ link.title | link_to: link.url }}
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>
{% schema %}
  {
  "name": "Menu Table",
  "settings": [
    {
        "type": "text",
        "id": "heading",
        "label": "Heading"
    },
    {
        "type": "richtext",
        "id": "description",
        "label":"Description"
    },
    {
      "type": "link_list",
      "id": "menu_1",
      "label": "Menu 1"
    },
    {
      "type": "link_list",
      "id": "menu_2",
      "label": "Menu 2"
    },
    {
      "type": "link_list",
      "id": "menu_3",
      "label": "Menu 3"
    }
  ],
  "presets": [
    {
      "name": "Menu Table"
    }
  ]
}  
{% endschema %}

{% stylesheet %}
.custom-menu-section {
  padding: 2rem 1rem;
  max-width: 1200px;
  margin: 0 auto;
}





.menu-table {
  display: flex;
  flex-direction: row;
  gap: 2rem;
  justify-content: space-between;
}

.menu-column {
  flex: 1;
}

.menu-row {
  padding: 0.75rem 0;
  border-bottom: 1px solid #ddd;
  font-size: 2rem;
}

.menu-row a {
  text-decoration: none;
  color: #333;
}

.menu-row a:hover {
  color: #007ace; /* Shopify blue or your brand color */
}

/* Responsive for smaller screens */
@media screen and (max-width: 768px) {
  .menu-table {
    flex-direction: column;
  }

  .menu-column {
    margin-bottom: 2rem;
  }
