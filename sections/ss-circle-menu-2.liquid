{% endif %}

{% if tag_bottom %}
  <style>
    .circle-menu-tag-{{ section.id }} {
      bottom: 0;
    }
    
    .circle-menu-title-{{ section.id }} {
      margin-bottom: {{ title_spacing_mobile }}px;
    }
    
    @media(min-width: 1024px) {
      .circle-menu-title-{{ section.id }} {
        margin-bottom: {{ title_spacing }}px;
      }
    }
  </style>
{% else %}
  <style>
    .circle-menu-tag-{{ section.id }} {
      top: 0;
    }
    
    .circle-menu-title-{{ section.id }} {
      margin-top: {{ title_spacing_mobile }}px;
    }
    @media(min-width: 1200px) {
      
      .circle-menu-title-{{ section.id }} {
        margin-top: {{ title_spacing }}px;
