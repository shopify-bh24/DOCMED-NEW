{%- style -%}

  {{ title_font | font_face: font_display: 'swap' }}
  {{ tag_font | font_face: font_display: 'swap' }}

  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    margin-left: {{ margin_horizontal_mobile }}rem;
    margin-right: {{ margin_horizontal_mobile }}rem;
    border-radius: {{ section_radius | times: 0.6 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .circle-menu-slider-{{ section.id }} {
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
  }

  .circle-menu-item-{{ section.id }} {
   

     width: 100%;
      height: auto;
      border-radius: 50%;
      border: {{ section.settings.item_border_thickness }}px solid {{ section.settings.item_border_color }};
      overflow: hidden;
      padding: 0; /* Removed inner padding */
      aspect-ratio: 1 / 1;
      box-sizing: border-box;
    
  }
   .circle-menu-title-{{ section.id }} {
    text-align: center;
    margin-top: 10px; 
  }
  .circle-menu-image-{{ section.id }} img {
    width: 100%;
    height: 100%;
    aspect-ratio: 1 / 1;
    object-fit: cover;
    border-radius: 50%;
    display: block;
  }
  
  .circle-menu-image-{{ section.id }} svg {
    display: block;
    border-radius: 50%;
    width: 100%;
    height: 100%;
    object-fit: cover;
   
  }
  .circle-menu-wrapper-{{ section.id }} {
  padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px {{ section.settings.padding_horizontal }}px;
  background-color: {{ section.settings.background_color }};
}
.circle-prev-{{ section.id }},
.circle-next-{{ section.id }} {
  position: absolute;
  top: 50%;
  /* transform: translateY(-50%); */
  z-index: 10;
  width: 40px;
  height: 40px;
  background-color: #000;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22px;
  cursor: pointer;
  box-shadow: 0 2px 6px rgba(0, 0, 0, 0.25);
  opacity: 0.8;
  transition: opacity 0.2s;
}

/* Offset arrows properly */
.circle-prev-{{ section.id }} {
  left: -60px; /* <- Increased spacing from slider */
}

.circle-next-{{ section.id }} {
  right: -60px;
}

.circle-menu-slider-{{ section.id }} .swiper-button-next::after,.circle-menu-slider-{{ section.id }} .swiper-button-prev::after {  
  font-size: 24px;
}
 
  .circle-menu-image-{{ section.id }} svg {     
    background-color: #a0a0a0;
  }
  
  .circle-menu-details-{{ section.id }} {
    text-align: center;
  }
  
  .circle-menu-tag-{{ section.id }} {  
    position: absolute; 
    left: 50%;
    transform: translateX(-50%);
    z-index: 10;
    margin: 0;
    font-size: {{ tag_size_mobile }}px;
    line-height: {{ tag_height }}%;
    padding: {{ tag_padding_vertical_mobile }}px {{ tag_padding_horizontal_mobile }}px;
    border-radius: {{ tag_border_radius }}px;
    color: {{ tag_color }};
    background-color: {{ tag_bg_color }};
    background-image: {{ tag_bg_gradient }};
    text-transform: unset;
    word-wrap: break-word;
    display: inline-block;
    width: 100%;
    max-width: max-content;
  }
  
  .circle-menu-title-{{ section.id }} {
    margin: 0;
    display: block;
    text-transform: unset;
    word-wrap: break-word;
    font-size: {{ title_size_mobile }}px;
    line-height: {{ title_height }}%;
    color: {{ title_color }};
  }
  
  @media(min-width: 1200px) {
    
    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
      margin-left: {{ margin_horizontal }}rem;
      margin-right: {{ margin_horizontal }}rem;
      border-radius: {{ section_radius }}px;
    }
  
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .circle-menu-slider-{{ section.id }} {
      /*margin-left: 0px !important;
      margin-right: 0px !important;
      padding-left: 0px !important;
      padding-right: 0px !important;*/
    }

    .circle-menu-tag-{{ section.id }} {
      font-size: {{ tag_size }}px;
    }

    .circle-menu-title-{{ section.id }} {      
      font-size: {{ title_size }}px;   
    }
    
    .circle-menu-tag-{{ section.id }} {
      font-size: {{ tag_size }}px;
      padding: {{ tag_padding_vertical }}px {{ tag_padding_horizontal }}px;
    }
  }
@media (max-width: 768px) {
  .circle-prev-{{ section.id }},
  .circle-next-{{ section.id }} {
    width: 32px;
    height: 32px;
    font-size: 16px;
  }

  .circle-prev-{{ section.id }} {
    left: -30px;
  }

  .circle-next-{{ section.id }} {
