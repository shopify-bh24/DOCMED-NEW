<script>
function circleMenu() {
  document
    .querySelector('.circle-menu-slider-{{ section.id }}')
    .classList.remove('preview');

  // Destroy old swiper if exists
  if (window.circleMenuSwiper && window.circleMenuSwiper.destroy) {
    window.circleMenuSwiper.destroy(true, true);
  }

  // Mobile autoplay config
  const isMobile = window.innerWidth < 768;

  window.circleMenuSwiper = new Swiper(".circle-menu-slider-{{ section.id }}", {
    speed: isMobile ? 3000 : 300,
    freeMode: isMobile,
    loop: isMobile,
    freeModeMomentum: isMobile ? false : true,
    autoplay: isMobile
      ? { delay: 0, disableOnInteraction: false }
      : false,
    navigation: {
      nextEl: '.circle-next-{{ section.id }}',
      prevEl: '.circle-prev-{{ section.id }}',
    },
    breakpoints: {
      320: {
        spaceBetween: {{ slider_gap_mobile }},
        slidesPerView: {{ slider_view_mobile }},
      },
      768: {
        slidesPerView: {{ slider_view }},
      },
      1200: {
        spaceBetween: {{ slider_gap }},
        slidesPerView: {{ slider_view }},
      }
    }
  });
}

document.addEventListener('DOMContentLoaded', circleMenu);
window.addEventListener('resize', circleMenu);

if (Shopify.designMode) {
  document.addEventListener('shopify:section:unload', circleMenu);
  document.addEventListener('shopify:section:load', circleMenu);
}
</script>


