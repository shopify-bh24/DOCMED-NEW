  #spro-{{ section.id }} .spro-col li {
    margin: 0;
    padding: 0 0 10px 0;
    text-align: left;
  }

  #spro-{{ section.id }} .spro-col li svg {
    transform: translateY(7px);
    margin-right: 5px;
    fill: #888;
  }

  #spro-{{ section.id }} .spro-col-highlighted li svg {
      fill: {{ section.settings.highlight_color }};
  }

  #spro-{{ section.id }} .spro-col li:last-child {
    margin: 0;
    padding: 0;
  }

  #spro-{{ section.id }} a.spro-cta {
    position: absolute;
    bottom: 20px;
    width: calc(100% - 40px);
    display: block;
    padding: 10px 10px;
    margin: 0 20px;
    background-image: {{section.settings.button_background_color}};
    border-radius: 5px;
    color: {{section.settings.button_text_color}};
    text-decoration: none;
    cursor: pointer;
    font-weight: bold;
    text-shadow: none;
    transition: .25s all;
    text-align: center;
    box-sizing: border-box;
  }

  #spro-{{ section.id }} .spro-col-highlighted a.spro-cta {
    background-image: {{section.settings.highlighted_button_background_color}};
    color: {{section.settings.highlighted_button_text_color}};
  }

  {%- endcapture -%} 

  {%- liquid
    assign chunks = sp_content | strip_newlines | split: ' ' | join: ' ' | split: '*/'
    for chunk in chunks
      assign mini = chunk | split: '/*' | first | strip | replace: ': ', ':' | replace: '; ', ';' | replace: '} ', '}' | replace: '{ ', '{' | replace: ' {', '{' | replace: ';}', '}'
      echo mini
    endfor
  %}
