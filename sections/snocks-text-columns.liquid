<style>
  .section-{{ section.id }}-padding {
  padding-top: {{ section.settings.padding_top }}px;
  padding-bottom: {{ section.settings.padding_bottom }}px;
}
@media screen and (max-width: 991px) {
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }
}
.snocks-image-text-columns {
  /* padding: 60px 20px; */
  background-color: #ffffff; 
}

.snocks-image-columns-wrapper {
  display: grid;
  gap: 40px;
  
}

.snocks-text-column {
  text-align: center;
}

 
.snocks-text-column h3 {
  font-size: 20px;
  font-weight: 600;
  margin-bottom: 10px;
}

.snocks-text-column p {
  font-size: 16px;
  line-height: 1.6;
  color: #333;
  text-align: {{section.settings.text_align}};
}

/* Responsive column layout */
.snocks-image-columns-wrapper .columns-1 {
  grid-template-columns: 1fr;
}

.snocks-image-columns-wrapper.columns-2 {
  grid-template-columns: repeat(2, 1fr);
}

.snocks-image-columns-wrapper.columns-3 {
  grid-template-columns: repeat(3, 1fr);
}
@media screen and (max-width:991px) {
 
  .snocks-image-columns-wrapper.columns-2,
  .snocks-image-columns-wrapper.columns-3 {
    grid-template-columns: repeat(2, 1fr);
  }
}
@media screen and (max-width:450px) { 
  .snocks-image-columns-wrapper.columns-2,
  .snocks-image-columns-wrapper.columns-3 {
    grid-template-columns:1fr;
  }
}  
</style>
  
<div class="snocks-image-columns-wrapper  section-{{ section.id }}-padding page-width columns-{{ section.settings.columns }} ">
   
  {% for block in section.blocks %}
    <div class="snocks-text-column">
      {% if block.settings.heading != blank %}
        <h3>{{ block.settings.heading }}</h3>
      {% endif %}
      {{ block.settings.text }}
    </div>
  {% endfor %}
   
</div>
 
{% schema %}
{
  "name": "SNOCKS Text Columns",
  "tag": "section",
  "class": "snocks-text-columns",
  "settings": [
    {
      "type": "select",
      "id": "columns",
      "label": "Columns per row",
      "default": "3",
      "options": [
        { "value": "1", "label": "1 Column" },
        { "value": "2", "label": "2 Columns" },
        { "value": "3", "label": "3 Columns" }
      ]
    },
    {
      "type": "select",
      "id": "text_align",
      "label": "Text align",
      "default": "justify",
      "options": [
        { "value": "justify", "label": "Justify" },
        { "value": "center", "label": "Center" },
        { "value": "left", "label": "Left" }
      ]
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Text Column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Sample Heading"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text Content",
          "default": "<p>Sample paragraph text goes here.</p>"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "SNOCKS Text Columns",
      "blocks": [
        {
          "type": "column"
        },
        {
          "type": "column"
        }
      ]
    }
  ]
}
{% endschema %}
